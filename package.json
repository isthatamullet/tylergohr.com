{
  "name": "tylergohr.com",
  "version": "1.0.0",
  "private": true,
  "description": "High-end creative portfolio website showcasing full-stack development mastery",
  "author": "Tyler Gohr",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "dev:enhanced": "npm run dev",
    "dev:claude": "npm run dev",
    "dev:3000": "PORT=3000 npm run dev",
    "dev:3001": "PORT=3001 npm run dev", 
    "dev:4000": "PORT=4000 npm run dev",
    "build": "npm run copy-blog-assets && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --headed --timeout=0",
    "copy-blog-assets": "node scripts/copy-blog-assets.js",
    "validate": "npm run typecheck && npm run lint && npm run build && npm run bundle-check",
    "bundle-check": "if [ -d \".next/static\" ]; then bundle_size=$(du -sk .next/static | cut -f1); echo \"Bundle size: ${bundle_size}KB\"; if [ $bundle_size -gt 6000 ]; then echo \"❌ Bundle size exceeds budget: ${bundle_size}KB > 6MB\"; exit 1; else echo \"✅ Bundle size within budget: ${bundle_size}KB (< 6MB)\"; fi; fi",
    "pre-commit": "npm run validate"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@monaco-editor/react": "^4.7.0",
    "@next/mdx": "^15.3.5",
    "@react-three/drei": "^10.4.2",
    "@react-three/fiber": "^9.2.0",
    "@types/node": "^24.0.3",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/three": "^0.178.0",
    "@use-gesture/react": "^10.3.1",
    "clipboard-polyfill": "^4.1.1",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.4",
    "framer-motion": "^12.19.1",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.12",
    "monaco-editor": "^0.52.2",
    "next": "^15.3.4",
    "nodemailer": "^7.0.3",
    "prism-react-renderer": "^2.4.1",
    "puppeteer": "^24.11.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hotkeys-hook": "^5.1.0",
    "recharts": "^3.0.2",
    "three": "^0.178.0",
    "typescript": "^5.8.3",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@playwright/test": "^1.53.1",
    "@types/nodemailer": "^6.4.17",
    "autoprefixer": "^10.4.21",
    "concurrently": "^7.6.0",
    "cssnano": "^7.0.7",
    "lighthouse": "^12.7.0",
    "svgo": "^4.0.0",
    "wait-on": "^7.0.1"
  }
}
